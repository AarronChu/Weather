page{
    width:100%;
    height:100%;
}
.container{
    width:100%;
    height:100%;
}
.search_area{
    background-color:#fff;
    width:100%;
    border-bottom:1px solid rgba(204,204,204,0.5);
}
.search_inp{
    display: inline-block;
    width:80%;
    background-color:rgba(204,204,204,0.5);
    border-radius:10rpx;
    margin: 30rpx;
    font-size: 32rpx;
}
.search_inp icon{
    float:left;
    margin:10rpx;
}
.search_inp input{
    display: inline-block;
    height:60rpx;
    line-height:60rpx;
    vertical-align: middle;
}
.search_area text{
    font-size:32rpx;
    color:#666;
}

.cities{
    width:100%;
    font-size:34rpx;
    color:#444;
    background-color:#fff;
}
.enHead{
    background-color:rgba(204,204,204,0.5);
    padding-left:50rpx;
}
.city{
    padding-left:40rpx;
    height:80rpx;
    line-height:80rpx;
    border-bottom:1px solid rgba(204,204,204,0.5);
}

.search_bar{
    position:fixed;
    right:30rpx;
    bottom:50rpx;
    font-size:28rpx;
    color:#888;
}

.search_result{
    width:100%;
    height:100%;
    background-color:rgba(204,204,204,0.5);
}

.search_result .search_city{
    padding-left:40rpx;
    height:100rpx;
    line-height:100rpx;
    background-color:#fff;
    border-bottom:1px solid rgba(204,204,204,0.5);
}

.search_result .no_result{
    text-align: center;
    font-size: 34rpx;
    color: #666;
    padding-top: 100rpx;
}